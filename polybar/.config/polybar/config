[colours]
; Pico 8 Palette
black = #000000
dark-blue = #1D2B53
dark-purple = #7E2553
dark-green = #008751
brown = #AB5236
dark-grey = #5F574F
light-grey = #C2C3C7
white = #FFF1E8
red = #FF004D
orange = #FFA300
yellow = #FFEC27
green = #00E436
blue = #29ADFF
lavender = #83769C
pink = #FF77A8
light-peach = #FFCCAA

background = #881D2B53
foreground = ${self.white}
foreground-disabled = ${self.light-grey}
primary = ${self.light-peach}
alert = ${self.red}

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/common]
height = 24
offset-y = 16
radius = 4

background = ${colours.background}
foreground = ${colours.foreground}
overline-size = 2
underline-size = 2

border-bottom-size = 0
wm-restack = bspwm

spacing = 0
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1

font-0 = Hack:size=8:bold;1
font-1 = Hack:size=8:bold;1
font-2 = FontAwesome:style=Regular:size=12;2

[bar/left]
inherit = bar/common
width = 250
offset-x = 5%
modules-left = bspwm

[bar/middle]
inherit = bar/common
width = 40%
offset-x = 30%

modules-center = xwindow
modules-left = wlan nixstatus

tray-position = right
tray-detached = false
tray-padding = 2
tray-maxsize = 16
tray-background = ${colours.background}

[bar/right]
inherit = bar/common
width = 320
offset-x = 95%:-320

modules-left = battery volume backlight
;modules-left = volume backlight battery 
modules-right = date

label = %output%

[module/backlight]
type = internal/backlight
card = intel_backlight

format = <ramp> <label>
label = %percentage%%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 

[module/nixstatus]
type = custom/script
tail = true
exec = /run/current-system/sw/bin/monitor-nix-version "" "" ""
label = %output%

[module/powermenu]
type = custom/menu
format-spacing = 1
expand-right = false
menu-0-0 = poweroff
menu-0-0-exec = poweroff
menu-0-1 = suspend
menu-0-1-exec = suspend

label-open = power
label-close = x
label-separator = |

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
label-font = 1

[module/bspwm]
type = internal/bspwm
ws-icon-default = x

enable-scroll = false

label-focused = 
label-focused-background = ${colours.background}
label-focused-foreground = ${colours.primary}
label-focused-padding = 1

label-occupied = 
label-occupied-padding = 1

label-urgent = 
label-urgent-foreground = ${colours.alert}
label-urgent-padding = 1

label-empty = 
label-empty-foreground = ${colours.foreground}
label-empty-padding = 1

[module/wlan]
type = internal/network
interface = wlp7s0
interval = 3.0

format-connected = <label-connected>

;label-connected = %essid%
;label-disconnected = %ifname% disconnected
label-connected = 
label-disconnected = 
label-disconnected-foreground = ${colours.foreground}

[module/date]
type = internal/date
interval = 5

date-alt = " %Y-%m-%d"

time = %I:%M %P
time-alt = %I:%M:%S %P

format-prefix-foreground = ${colours.foreground}

label = %date% %time%

[module/volume]
type = internal/alsa

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

label-muted = ""
format-muted-foreground = ${colours.foreground-disabled}
label-muted-font = 3

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 98

label-charging =  %percentage%%
format-charging = <label-charging>
format-charging-underline = ${colours.green}
format-charging-margin = 1

label-discharging =  %percentage%%
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colours.orange}
format-discharging-margin = 1

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

label-full =  %percentage%%
format-full-prefix-foreground = ${colors.foreground}
format-full-underline = ${self.format-charging-underline}
format-full-margin = 1

