{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
    },
    "zig": {
      "command": "zls",
      "filetypes": [ "zig" ]
    }
  },
  "coc.source.around.enable": false,
  "coc.source.buffer.enable": false,
  "coc.source.file.enable": false,
}
